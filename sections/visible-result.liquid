{% schema %}
{
  "name": "Results Timeline",
  "class": "results-timeline-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "See The Transformation"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "Real results from real customers. Watch as skin transforms with regular use of our mask over 4 weeks."
    },
    {
      "type": "image_picker",
      "id": "week1_image",
      "label": "Week 1 Image"
    },
    {
      "type": "image_picker",
      "id": "week2_image",
      "label": "Week 2 Image"
    },
    {
      "type": "image_picker",
      "id": "week4_image",
      "label": "Week 4 Image"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "Start Your Transformation"
    }
  ],
  "presets": [
    {
      "name": "Results Timeline",
      "category": "Product"
    }
  ]
}
{% endschema %}