      <div class="relative group">
        <!-- Timeline connector (desktop only) -->
        <div class="hidden md:block absolute top-1/4 -right-4 w-8 h-0.5 bg-gradient-to-r from-pink-200 to-purple-200 group-last:hidden"></div>
        
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden border border-gray-100 hover:shadow-2xl transition-all duration-300 hover:-translate-y-2">
          <!-- Week label -->
          <div class="px-6 pt-6">
            <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold bg-pink-50 text-pink-700 border border-pink-100">
              Week 1
            </span>
          </div>
          
          <!-- Image container -->
          <div class="relative mt-4 px-6">
            <div class="aspect-square overflow-hidden rounded-xl">
              {% if section.settings.week1_image %}
                <img 
                  src="{{ section.settings.week1_image | img_url: '600x600' }}" 
                  alt="Results after 1 week of using {{ product.title }}" 
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                  loading="lazy"
                >
              {% else %}
                <!-- Fallback placeholder -->
                <div class="w-full h-full bg-gradient-to-br from-pink-100 to-pink-50 flex items-center justify-center">
                  <div class="text-center p-8">
                    <div class="text-pink-300 text-5xl mb-4">ðŸ“¸</div>
                    <p class="text-pink-400 font-medium">Week 1 Results</p>
                  </div>
