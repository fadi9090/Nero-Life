{% comment %}
  Section: Product LED Mask
  Description: Product display with gallery, purchase options, and AJAX cart integration.
  
  ⚠️ CRITICAL SETUP: REPLACE THE PLACEHOLDER VARIANT IDs BELOW.
  You must create "Single Mask" and "Double Pack" variants in your Shopify admin.
{% endcomment %}

{% assign featured_product = all_products['14-silicone-face-neck-photon-mask'] %}
{% assign discounted_price = featured_product.price | times: 0.65 %}
{% assign featured_variant = featured_product.selected_or_first_available_variant %}

{% comment %} Hardcode Variant IDs for your two package options - REPLACE THESE NUMBERS {% endcomment %}
{% assign single_mask_variant_id = 45678901234567 %}
{% assign double_pack_variant_id = 45678901234568 %}

{% comment %} Find images for package options - ENSURE THESE ASSET FILENAMES EXIST IN YOUR ASSETS FOLDER {% endcomment %}
{% assign single_image_url = 'single.png' | asset_url %}
{% assign double_image_url = 'double.png' | asset_url %}


<div class="max-w-7xl mx-auto flex flex-col lg:flex-row lg:justify-between lg:gap-10 mb-8" id="product-section">
    <div class="w-full lg:w-1/2 mb-6 lg:mb-0">
        <div class="bg-white rounded-xl shadow-lg p-4 flex flex-col items-center">
            <div class="w-full h-80 sm:h-96 flex items-center justify-center mb-4">
                <img id="media-display"
                    src="{{ featured_product.featured_image | img_url: '1024x1024' }}"
                    alt="{{ featured_product.featured_image.alt | escape }}"
                    class="max-h-full max-w-full object-contain rounded-lg transition-opacity duration-300"
                    onerror="this.onerror=null; this.src='https://placehold.co/600x600/f0f0f0/000000?text=Image+Load+Error';"
                />
            </div>
            
            {# Thumbnail Gallery #}
            <div id="thumbnails-container"
                class="w-full flex space-x-3 overflow-x-auto no-scrollbar pb-1 justify-start sm:justify-center"
            >
                {% for media in featured_product.media %}
                    {% assign is_active = forloop.first %}
                    <img src="{{ media.preview_image | img_url: 'medium' }}"
                        alt="{{ media.alt | escape }}"
                        data-full-url="{{ media | img_url: '1024x1024' }}"
                        data-media-id="{{ media.id }}"
                        class="media-thumbnail w-16 h-16 flex-shrink-0 object-cover rounded-lg cursor-pointer transition-all duration-200 hover:scale-105 hover:opacity-100
                            {% if is_active %}
                                border-blue-600 border-2 ring-2 ring-blue-600/50 shadow-md
                            {% else %}
                                border-gray-300 border opacity-75
                            {% endif %}"
                        onclick="swapMedia(this, '{{ media | img_url: '1024x1024' }}')"
                    />
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="w-full lg:w-1/2 p-6 border rounded-xl shadow-sm bg-white">
        <h1 class="text-3xl font-extrabold mb-4 text-gray-900">
            {{ featured_product.title }}
        </h1>

        {# Price Display Container (Updated by JS) #}
        <div class="mt-2 mb-6" id="price-display-container">
            <span class="text-xl font-bold text-gray-900">
                {{ discounted_price | money_without_trailing_zeros }}
            </span>
            <span class="text-base line-through text-gray-500 ml-2">
                {{ featured_product.price | money_without_trailing_zeros }}
            </span>
            <div class="text-sm text-green-600 font-medium mt-1">
                Save 35%
            </div>
        </div>
        
        {# START OF THE CRITICAL CART FORM #}
        <form method="post" action="/cart/add" id="product-form-{{ featured_product.id }}" class="mb-6">
            
            {# The ID of the selected variant (changes when package is selected) #}
            <input type="hidden" name="id" value="{{ single_mask_variant_id }}" id="variant-id-input">
            
            {# Quantity is always 1, as the variant ID represents 1 "package" #}
            <input type="hidden" name="quantity" value="1" id="quantity-input">

            {# Package Options #}
            <div>
                <h3 class="text-base font-semibold text-gray-800 mb-3">Choose Your Package:</h3>
                
                <div class="grid grid-cols-2 gap-3">
                    
                    {# Single Mask Option #}
                    <div id="singleMaskOption" class="mask-option relative border-2 border-[#FA8072] rounded-lg p-3 cursor-pointer transition-all duration-200 hover:shadow-md bg-rose-50"
                        data-quantity="1"
                        data-variant-id="{{ single_mask_variant_id }}"
                        data-original-price="{{ featured_product.price | money_without_trailing_zeros }}"
                        data-discounted-price="{{ discounted_price | money_without_trailing_zeros }}"
                        onclick="selectMaskOption(this, 1)">
                        
                        <div class="absolute -top-2 -right-2 w-5 h-5 bg-[#FA8072] rounded-full flex items-center justify-center">
                            <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                        </div>

                        <div class="flex flex-col items-center text-center">
                            {# IMAGE RENDERING #}
                            <div class="package-image w-12 h-12 mb-2 bg-gray-100 rounded-lg flex items-center justify-center overflow-hidden">
                                <img src="{{ single_image_url }}" alt="Single Mask" class="w-full h-full object-cover">
                            </div>
                            
                            <h4 class="text-sm font-medium text-gray-900 mb-1">Single Mask</h4>
                            <div class="text-base font-bold text-[#FA8072]">
                                {{ discounted_price | money_without_trailing_zeros }}
                            </div>
                            <div class="text-xs line-through text-gray-500">
                                {{ featured_product.price | money_without_trailing_zeros }}
                            </div>
                        </div>
                    </div>

                    {# Double Mask Option #}
                    <div id="doubleMaskOption" class="mask-option relative border-2 border-gray-200 rounded-lg p-3 cursor-pointer transition-all duration-200 hover:border-[#FA8072] hover:shadow-md"
                        data-quantity="2"
                        data-variant-id="{{ double_pack_variant_id }}"
                        data-original-price="{{ featured_product.price | times: 2 | money_without_trailing_zeros }}"
                        data-discounted-price="{{ discounted_price | times: 2 | money_without_trailing_zeros }}"
                        onclick="selectMaskOption(this, 2)">
                        
                        <div class="absolute -top-2 -right-2 w-5 h-5 bg-[#FA8072] rounded-full flex items-center justify-center hidden">
                            <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                        </div>

                        <div class="flex flex-col items-center text-center">
                            {# IMAGE RENDERING #}
                            <div class="package-image w-12 h-12 mb-2 bg-gray-100 rounded-lg flex items-center justify-center overflow-hidden">
                                <img src="{{ double_image_url }}" alt="Double Mask" class="w-full h-full object-cover">
                            </div>

                            <h4 class="text-sm font-medium text-gray-900 mb-1">Double Pack</h4>
                            <div class="text-base font-bold text-[#FA8072]">
                                {{ discounted_price | times: 2 | money_without_trailing_zeros }}
                            </div>
                            <div class="text-xs line-through text-gray-500">
                                {{ featured_product.price | times: 2 | money_without_trailing_zeros }}
                            </div>
                            {% assign save_amount = featured_product.price | times: 2 | minus: discounted_price | times: 2 %}
                            <div class="text-xs text-green-600 font-medium mt-1" data-save-amount="Save {{ save_amount | money_without_trailing_zeros }}">
                                Save {{ save_amount | money_without_trailing_zeros }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {# Add to Cart Button #}
            <div class="mt-6">
                <button type="submit" id="addToCartButton" 
                        class="bg-[#FA8072] text-white p-3 rounded-xl w-full text-base font-semibold shadow-md hover:bg-[#E57365] transition duration-200">
                    Add to Cart - <span class="quantity-text">1 Mask</span>
                </button>
            </div>
        </form>
        {# END OF THE CRITICAL CART FORM #}

    </div>
</div>

{# Simple Cart Notification Toast #}
<div id="cart-notification" class="fixed bottom-4 right-4 bg-green-600 text-white p-3 rounded-lg shadow-xl hidden transition-opacity duration-300 z-50">
    Product added to cart!
</div>


<script>
// Global elements
const form = document.getElementById('product-form-{{ featured_product.id }}');
const variantIdInput = document.getElementById('variant-id-input');
const quantityInput = document.getElementById('quantity-input');
const notification = document.getElementById('cart-notification');

// Product-specific JavaScript (media swapping remains the same)
function swapMedia(thumbnail, fullImageUrl) {
    const mediaDisplay = document.getElementById('media-display');
    const thumbnails = document.querySelectorAll('.media-thumbnail');
    
    mediaDisplay.style.opacity = '0';
    setTimeout(() => {
        mediaDisplay.src = fullImageUrl;
        mediaDisplay.style.opacity = '1';
    }, 150);
    
    thumbnails.forEach(thumb => {
        thumb.classList.remove('border-blue-600', 'ring-2', 'ring-blue-600/50', 'shadow-md');
        thumb.classList.add('border-gray-300', 'opacity-75');
    });
    
    thumbnail.classList.add('border-blue-600', 'ring-2', 'ring-blue-600/50', 'shadow-md');
    thumbnail.classList.remove('border-gray-300', 'opacity-75');
}

// Mask selection functionality
function selectMaskOption(element, quantity) {
    // 1. Update styling/checkmark
    document.querySelectorAll('.mask-option').forEach(option => {
        option.classList.remove('border-[#FA8072]', 'bg-rose-50');
        option.classList.add('border-gray-200', 'bg-white');
        const checkmark = option.querySelector('.absolute');
        if (checkmark) checkmark.style.display = 'none';
    });

    element.classList.add('border-[#FA8072]', 'bg-rose-50');
    element.classList.remove('border-gray-200', 'bg-white');
    const checkmark = element.querySelector('.absolute');
    if (checkmark) checkmark.style.display = 'flex';

    // 2. CRITICAL FIX: Update the hidden form fields
    const newVariantId = element.getAttribute('data-variant-id');
    
    if (variantIdInput && newVariantId) {
        variantIdInput.value = newVariantId;
    }
    
    // Quantity remains 1, as the variant ID represents 1 'pack'
    if (quantityInput) {
        quantityInput.value = 1; 
    }

    // 3. Update button text
    const button = document.getElementById('addToCartButton');
    const quantityText = button.querySelector('.quantity-text');
    quantityText.textContent = (quantity === 1) ? '1 Mask' : `${quantity} Masks`;

    // 4. Update price display
    const priceDisplay = document.getElementById('price-display-container');
    if (priceDisplay) {
        const originalPrice = element.getAttribute('data-original-price');
        const discountedPrice = element.getAttribute('data-discounted-price');
        
        let priceHTML = `
            <span class="text-xl font-bold text-gray-900">
                ${discountedPrice}
            </span>
            <span class="text-base line-through text-gray-500 ml-2">
                ${originalPrice}
            </span>
        `;
        
        if (quantity === 1) {
            priceHTML += '<div class="text-sm text-green-600 font-medium mt-1">Save 35%</div>';
        } else if (element.getAttribute('data-save-amount')) {
            const saveAmount = element.getAttribute('data-save-amount');
            priceHTML += `<div class="text-xs text-green-600 font-medium mt-1">${saveAmount}</div>`;
        }
        
        priceDisplay.innerHTML = priceHTML;
    }
}

// **AJAX FORM SUBMISSION**
form.addEventListener('submit', function(event) {
    event.preventDefault(); // Stop the default page reload

    const formData = new FormData(event.target);
    const lineItem = {
        items: [{
            id: formData.get('id'), // The selected variant ID
            quantity: 1             // Always 1 'pack'
        }]
    };

    fetch('/cart/add.js', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify(lineItem)
    })
    .then(response => {
        if (!response.ok) {
            throw new Error('Failed to add to cart.');
        }
        return response.json();
    })
    .then(data => {
        // Success: Update UI
        updateCartCount();
        showNotification();
        
        const button = document.getElementById('addToCartButton');
        button.textContent = 'Added to Cart!';
        setTimeout(() => {
             // Reset button text back to current selection
             const selectedElement = document.querySelector('.mask-option.border-[#FA8072]');
             const selectedQuantity = selectedElement ? selectedElement.getAttribute('data-quantity') : 1;

             button.innerHTML = `Add to Cart - <span class="quantity-text">${selectedQuantity} Mask${selectedQuantity > 1 ? 's' : ''}</span>`;
        }, 1500);

    })
    .catch((error) => {
        console.error('Error adding to cart:', error);
        alert('Could not add item to cart. Please ensure a valid package is selected.');
    });
});

function updateCartCount() {
    // Fetches the current cart data and updates the badge in the header
    fetch('/cart.js')
        .then(response => response.json())
        .then(cart => {
            const cartCountElements = document.querySelectorAll('.cart-count');
            cartCountElements.forEach(el => {
                el.textContent = cart.item_count;
                // Optional: Show/hide the badge if the count is zero
                el.style.display = cart.item_count > 0 ? 'flex' : 'none';
            });
        });
}

function showNotification() {
    notification.classList.remove('hidden');
    notification.style.opacity = 1;
    
    // Hide notification after 3 seconds
    setTimeout(() => {
        notification.style.opacity = 0;
        setTimeout(() => {
            notification.classList.add('hidden');
        }, 300);
    }, 3000);
}


// Initialization: Ensure single mask is selected on load
document.addEventListener('DOMContentLoaded', function() {
    const singleMaskOption = document.querySelector('.mask-option[data-quantity="1"]');
    if (singleMaskOption) {
        selectMaskOption(singleMaskOption, 1);
    }
});
</script>

