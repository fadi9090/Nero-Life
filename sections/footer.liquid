<div class="bg-[#FA8072] text-[#F5F5DC] py-6"> 
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row justify-between items-center">

      <div class="flex flex-col px-4 space-y-1 md:flex-row md:space-x-4 text-center md:text-right w-full md:w-auto mt-4 md:mt-0">
        <a href="/privacy-policy" class="hover:text-[#0077B6] transition-colors duration-300">Privacy Policy</a>
        <a href="/terms-of-service" class="hover:text-[#0077B6] transition-colors duration-300">Terms of Service</a>
      </div> 
      
      <div class="mb-6 md:mb-0 w-full py-5 px-4 md:w-auto">
        {% form 'customer' %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          
          <div class="flex flex-col space-y-3 md:flex-row md:space-y-0 md:space-x-2"> 
             
            <input type="email" 
              name="contact[email]"
              placeholder="Subscribe to our newsletter" 
              class="w-full px-4 py-3 bg-white rounded-md text-black border border-gray-400 focus:border-black focus:ring-1 focus:ring-black" 
              required
              aria-label="Email address for newsletter"
            />
            
            <button type="submit"
              class="w-full md:w-auto px-4 py-3 bg-black text-[#F5F5DC] rounded-md transition-colors duration-300 hover:bg-[#0077B6] hover:text-white">
              Subscribe
            </button>
          </div>
          
        {% endform %}
      </div>
      
      <div class="mb-4 md:mb-0 text-center md:text-left">
        <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
      </div>

    </div>
  </div>
</div>