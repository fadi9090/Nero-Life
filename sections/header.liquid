{%- assign main_menu_linklist = linklists[section.settings.menu].links -%}
{% assign logo_image = section.settings.logo %}

<style>
  .header-logo {
      max-height: 60px; 
      width: auto;     
      vertical-align: middle; 
  }

  .header-logo-container {
      display: flex;
      align-items: center;
  }

  /* Fix header positioning */
  .section-header {
      position: relative;
      z-index: 100;
      background: white;
      width: 100%;
  }

  /* Ensure header stays on top of hero section */
  .header-wrapper {
      position: relative;
      z-index: 100;
  }
</style>

<!-- Header Wrapper - This ensures header stays above hero -->
<div class="header-wrapper">
  <div x-data="{mobileMenu: false}" class="section-header bg-white shadow-md">
    <div class="mx-auto px-4 sm:px-6">
      <div class="flex justify-between items-center h-16 md:justify-between md:space-x-4">

        <!-- Mobile menu button -->
        <div class="-ml-2 -my-2 mr-3 md:hidden">
          <button @click="mobileMenu = !mobileMenu" type="button" class="p-2 rounded-md text-black hover:text-[#0077B6] focus:outline-none focus:ring-2 focus:ring-inset focus:ring-gray-600">
            {% render 'icon-menu' %}
          </button>
        </div>

        <!-- Logo -->
        <div class="header-logo-container flex flex-1 justify-center md:flex-1 md:justify-start truncate">
          {% if logo_image != blank %}
            <div class="header-logo-container">
              {{ logo_image | image_url: height: 60 | image_tag: 
                alt: shop.name, 
                class: "header-logo" 
              }}
            </div>
          {% else %}
            <h1 class="text-lg font-bold">{{ shop.name }}</h1>
          {% endif %}
        </div>
        
        <!-- Desktop Navigation -->
        <nav class="hidden md:flex md:flex-initial md:justify-center md:space-x-10">
          {% for link in main_menu_linklist %}
            <div class="relative">
              <a href="{{link.url}}" class="text-base text-black hover:text-[#0077B6] transition duration-150 font-medium">{{ link.title }}</a>
            </div>
          {% endfor %}
        </nav>

        <!-- Cart -->
        <div class="flex items-center -mr-2 -my-2 ml-3">
            <button type="button" 
                    @click="open = true" 
                    class="p-2 rounded-md whitespace-nowrap text-black hover:text-[#0077B6] cart-icon-btn">
                {% render 'icon-shopping-bag' %}
                <span class="cart-count">{{ cart.item_count }}</span>
            </button>
        </div>
      </div>
    </div>
    
    <!-- Mobile Menu -->
    <div x-show="mobileMenu" 
          @click.away="mobileMenu = false" 
          x-transition:enter="duration-200 ease-out"
          x-transition:enter-start="opacity-0 scale-95"
          x-transition:enter-end="opacity-100 scale-100"
          x-transition:leave="duration-100 ease-in"
          x-transition:leave-start="opacity-100 scale-100"
          x-transition:leave-end="opacity-0 scale-95"
          class="absolute z-50 top-16 inset-x-0 p-2 transform origin-top-left md:hidden">
      
      <div class="shadow-lg rounded-lg ring-1 ring-black ring-opacity-5 bg-white w-full">
        <div class="p-5 divide-y-2 divide-gray-100"> 
          <div class="flex items-center justify-between pb-3">
            <div>
              <h1 class="text-lg text-black font-bold">{{ section.settings.mobile_menu_title | default: "Menu" }}</h1>
            </div>
            <div class="-mr-2">
              <button @click="mobileMenu = false" type="button" class="text-black rounded-md p-2 hover:text-[#0077B6]">
                  {% render 'icon-close' %}
              </button>
            </div>
          </div>

          <div class="pt-3">
            <nav class="grid gap-y-2">
              {% for link in main_menu_linklist %}
                <a href="{{link.url}}" class="-m-3 p-3 flex items-center rounded-md text-base text-black hover:text-[#0077B6] font-medium">
                  {{ link.title }}
                </a>
              {% endfor %}
            </nav>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // SIMPLE Cart Drawer Open Function
  function openCartDrawerSimple() {
      console.log('Opening cart drawer (simple method)');
      
      // 1. Show the overlay
      const overlay = document.querySelector('#CartDrawer > div:first-child');
      if (overlay) {
          overlay.style.display = 'block';
          overlay.style.opacity = '1';
      }
      
      // 2. Show the drawer content
      const drawerContent = document.querySelector('#CartDrawer > div:last-child');
      if (drawerContent) {
          drawerContent.style.display = 'block';
          drawerContent.style.transform = 'translateX(0)';
      }
      
      // 3. Add a class to body to prevent scrolling
      document.body.style.overflow = 'hidden';
      
      // 4. Make drawer clickable
      const cartDrawer = document.getElementById('CartDrawer');
      if (cartDrawer) {
          cartDrawer.style.pointerEvents = 'auto';
          cartDrawer.classList.remove('pointer-events-none');
      }
  }

  // And add a close function
  function closeCartDrawer() {
      const overlay = document.querySelector('#CartDrawer > div:first-child');
      const drawerContent = document.querySelector('#CartDrawer > div:last-child');
      const cartDrawer = document.getElementById('CartDrawer');
      
      if (overlay) overlay.style.display = 'none';
      if (drawerContent) drawerContent.style.transform = 'translateX(100%)';
      if (cartDrawer) {
          cartDrawer.style.pointerEvents = 'none';
          cartDrawer.classList.add('pointer-events-none');
      }
      
      document.body.style.overflow = '';
  }
</script>

{% schema %}
{
  "name": "Header",
  "tag": "section",
  "class": "section-header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo",
      "info": "Upload the logo image"
    },
    {
      "type": "text",
      "id": "mobile_menu_title",
      "label": "Mobile Menu Title",
      "default": "Menu",
      "info": "Title for the mobile menu drawer"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Navigation Menu",
      "default": "main-menu",
      "info": "Select the navigation menu to display"
    }
  ]
}
{% endschema %}