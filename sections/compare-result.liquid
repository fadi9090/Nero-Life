<style>
  .comparison-slider-container {
    position: relative;
    overflow: hidden;
    border-radius: 2rem;
    box-shadow: 
      0 30px 60px -15px rgba(0, 0, 0, 0.25),
      inset 0 1px 0 0 rgba(255, 255, 255, 0.1);
    width: 100%;
    background: linear-gradient(145deg, #ffffff, #f8fafc);
    border: 1px solid rgba(14, 165, 233, 0.1);
    backdrop-filter: blur(10px);
  }
  
  .image-wrapper {
    position: relative;
    width: 100%;
    height: 100%;
  }
  
  .before-image-overlay, .after-image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    transition: filter 0.3s ease;
  }
  
  .before-image-overlay {
    width: 50%;
    z-index: 2;
    background-color: #f8fafc;
    box-shadow: 2px 0 20px rgba(0, 0, 0, 0.05);
    clip-path: inset(0 0 0 0);
  }
  
  .after-image-overlay {
    width: 100%;
    z-index: 1;
    background-color: #f1f5f9;
    filter: brightness(1.03) saturate(1.05);
  }
  
  .slider-divider {
    position: absolute;
    top: 0;
    left: 50%;
    height: 100%;
    width: 2px;
    background: linear-gradient(to bottom, 
      transparent 0%, 
      rgba(255, 255, 255, 0.9) 10%, 
      rgba(255, 255, 255, 0.9) 90%, 
      transparent 100%);
    transform: translateX(-50%);
    pointer-events: none;
    z-index: 30;
    box-shadow: 
      0 0 0 1px rgba(255, 255, 255, 0.8),
      0 0 30px rgba(14, 165, 233, 0.3);
  }
  
  .slider-handle {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 40;
    pointer-events: none;
  }
  
  .slider-circle {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #ffffff, #f0f9ff);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 
      0 15px 35px rgba(14, 165, 233, 0.2),
      0 5px 15px rgba(0, 0, 0, 0.1),
      inset 0 1px 0 rgba(255, 255, 255, 0.9);
    cursor: ew-resize;
    pointer-events: all;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border: 2px solid rgba(255, 255, 255, 0.9);
  }
  
  .slider-circle:hover {
    transform: scale(1.15) translate(-43.5%, -43.5%);
    box-shadow: 
      0 20px 40px rgba(14, 165, 233, 0.3),
      0 8px 25px rgba(0, 0, 0, 0.15),
      inset 0 1px 0 rgba(255, 255, 255, 0.9);
    background: linear-gradient(135deg, #ffffff, #e0f2fe);
  }
  
  .slider-circle:active {
    transform: scale(1.1) translate(-45.5%, -45.5%);
    box-shadow: 
      0 10px 25px rgba(14, 165, 233, 0.25),
      0 3px 10px rgba(0, 0, 0, 0.1),
      inset 0 1px 0 rgba(255, 255, 255, 0.9);
  }
  
  .slider-icon {
    background: linear-gradient(135deg, #0ea5e9, #0284c7);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-size: 18px;
  }
  
  .arrow-left, .arrow-right {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, #ffffff, #f0f9ff);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #0ea5e9;
    font-size: 20px;
    box-shadow: 
      0 8px 25px rgba(0, 0, 0, 0.1),
      0 2px 10px rgba(14, 165, 233, 0.15),
      inset 0 1px 0 rgba(255, 255, 255, 0.9);
    z-index: 35;
    pointer-events: all;
    opacity: 0;
    transition: all 0.3s ease;
    cursor: pointer;
    border: 1px solid rgba(14, 165, 233, 0.15);
  }
  
  .arrow-left {
    left: 24px;
    transform: translateY(-50%) translateX(-10px);
  }
  
  .arrow-right {
    right: 24px;
    transform: translateY(-50%) translateX(10px);
  }
  
  .comparison-slider-container:hover .arrow-left {
    opacity: 1;
    transform: translateY(-50%) translateX(0);
  }
  
  .comparison-slider-container:hover .arrow-right {
    opacity: 1;
    transform: translateY(-50%) translateX(0);
  }
  
  .arrow-left:hover, .arrow-right:hover {
    background: linear-gradient(135deg, #ffffff, #e0f2fe);
    transform: translateY(-50%) scale(1.1);
    box-shadow: 
      0 12px 30px rgba(14, 165, 233, 0.25),
      0 4px 15px rgba(0, 0, 0, 0.12),
      inset 0 1px 0 rgba(255, 255, 255, 0.9);
  }
  
  .progress-dots {
    position: absolute;
    bottom: 28px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 30;
    display: flex;
    gap: 10px;
    pointer-events: all;
    background: rgba(255, 255, 255, 0.9);
    padding: 10px 20px;
    border-radius: 30px;
    backdrop-filter: blur(5px);
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
    border: 1px solid rgba(14, 165, 233, 0.1);
  }
  
  .progress-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: rgba(14, 165, 233, 0.2);
    transition: all 0.3s ease;
    cursor: pointer;
    position: relative;
  }
  
  .progress-dot::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 16px;
    height: 16px;
    border-radius: 50%;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .progress-dot:hover::after {
    opacity: 1;
    border: 1px solid rgba(14, 165, 233, 0.3);
  }
  
  .progress-dot.active {
    background: linear-gradient(135deg, #0ea5e9, #0284c7);
    transform: scale(1.3);
    box-shadow: 0 0 0 2px rgba(14, 165, 233, 0.1);
  }
  
  .pulse-glow {
    animation: pulseGlow 3s infinite;
  }
  
  @keyframes pulseGlow {
    0% { 
      box-shadow: 
        0 15px 35px rgba(14, 165, 233, 0.2),
        0 5px 15px rgba(0, 0, 0, 0.1),
        inset 0 1px 0 rgba(255, 255, 255, 0.9);
    }
    50% { 
      box-shadow: 
        0 15px 40px rgba(14, 165, 233, 0.3),
        0 5px 20px rgba(0, 0, 0, 0.15),
        inset 0 1px 0 rgba(255, 255, 255, 0.9),
        0 0 20px rgba(14, 165, 233, 0.4);
    }
    100% { 
      box-shadow: 
        0 15px 35px rgba(14, 165, 233, 0.2),
        0 5px 15px rgba(0, 0, 0, 0.1),
        inset 0 1px 0 rgba(255, 255, 255, 0.9);
    }
  }
  
  /* Results Badge */
  .results-badge {
    position: absolute;
    top: 24px;
    right: 24px;
    z-index: 25;
    background: linear-gradient(135deg, #0ea5e9, #0284c7);
    color: white;
    padding: 8px 20px;
    border-radius: 30px;
    font-weight: 600;
    font-size: 14px;
    box-shadow: 0 5px 20px rgba(14, 165, 233, 0.3);
    backdrop-filter: blur(5px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }
  
  /* Professional labels */
  .comparison-label {
    position: absolute;
    bottom: 24px;
    z-index: 25;
    background: rgba(255, 255, 255, 0.95);
    padding: 12px 24px;
    border-radius: 16px;
    font-weight: 600;
    font-size: 15px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
    backdrop-filter: blur(5px);
    border: 1px solid rgba(14, 165, 233, 0.1);
    display: flex;
    align-items: center;
    gap: 8px;
    transition: all 0.3s ease;
  }
  
  .comparison-label:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
  }
  
  .label-before {
    left: 24px;
    color: #ea580c;
  }
  
  .label-after {
    right: 24px;
    color: #059669;
  }
  
  .label-indicator {
    width: 10px;
    height: 10px;
    border-radius: 50%;
  }
  
  .label-before .label-indicator {
    background: linear-gradient(135deg, #ea580c, #dc2626);
  }
  
  .label-after .label-indicator {
    background: linear-gradient(135deg, #059669, #10b981);
  }
  
  /* Loading animation */
  .image-loading {
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
    background-size: 200% 100%;
    animation: loading 1.5s infinite;
  }
  
  @keyframes loading {
    0% { background-position: 200% 0; }
    100% { background-position: -200% 0; }
  }
  
  /* Subtle hover effect on container */
  .comparison-slider-container:hover .after-image-overlay {
    filter: brightness(1.05) saturate(1.08) contrast(1.02);
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .comparison-slider-container {
      border-radius: 1.5rem;
    }
    
    .arrow-left, .arrow-right {
      width: 40px;
      height: 40px;
      font-size: 16px;
    }
    
    .arrow-left {
      left: 16px;
    }
    
    .arrow-right {
      right: 16px;
    }
    
    .comparison-label {
      padding: 8px 16px;
      font-size: 13px;
      bottom: 16px;
    }
    
    .label-before {
      left: 16px;
    }
    
    .label-after {
      right: 16px;
    }
    
    .results-badge {
      top: 16px;
      right: 16px;
      font-size: 12px;
      padding: 6px 16px;
    }
  }
</style>

