<script>
document.addEventListener('DOMContentLoaded', function() {
  const beforeImage = document.getElementById('ledBeforeImage');
  const afterImage = document.getElementById('ledAfterImage');
  const sliderDivider = document.getElementById('ledSliderDivider');
  const sliderHandle = document.getElementById('ledSliderHandle');
  const comparisonContainer = document.getElementById('ledComparisonContainer');
  const progressDots = document.getElementById('ledProgressDots').children;
  const arrowLeft = document.getElementById('ledArrowLeft');
  const arrowRight = document.getElementById('ledArrowRight');
  
  let isDragging = false;
  let currentPosition = 50;
  
  // Update slider position
  function updateSliderPosition(clientX) {
    const containerRect = comparisonContainer.getBoundingClientRect();
    let newPosition = ((clientX - containerRect.left) / containerRect.width) * 100;
    
    // Constrain between 0% and 100%
    newPosition = Math.max(0, Math.min(newPosition, 100));
    currentPosition = newPosition;
    
    beforeImage.style.width = `${newPosition}%`;
    sliderDivider.style.left = `${newPosition}%`;
    sliderHandle.style.left = `${newPosition}%`;
    
    // Update progress dots
    updateProgressDots(newPosition);
    
    // Add subtle visual feedback
    beforeImage.style.filter = `brightness(${1 + (newPosition / 200)})`;
  }
  
  // Update progress dots based on position
  function updateProgressDots(position) {
    const positions = [0, 25, 50, 75, 100];
    let activeIndex = 0;
    let minDiff = 100;
    
    // Find closest dot position
    positions.forEach((pos, index) => {
      const diff = Math.abs(position - pos);
      if (diff < minDiff) {
        minDiff = diff;
        activeIndex = index;
      }
    });
    
    // Update active dot
    Array.from(progressDots).forEach((dot, index) => {
      if (index === activeIndex) {
        dot.classList.add('active');
      } else {
        dot.classList.remove('active');
      }
    });
  }
  
  // Click on progress dot to jump to position
  Array.from(progressDots).forEach((dot) => {
    dot.addEventListener('click', function(e) {
      e.stopPropagation();
      const position = parseInt(this.getAttribute('data-pos'));
      const containerRect = comparisonContainer.getBoundingClientRect();
      const clientX = containerRect.left + (containerRect.width * position / 100);
      updateSliderPosition(clientX);
    });
  });
  
  // Mouse events with smooth animation
  sliderHandle.addEventListener('mousedown', function(e) {
    e.preventDefault();
    isDragging = true;
    document.body.style.cursor = 'ew-resize';
    sliderHandle.querySelector('.slider-circle').style.transform = 'translate(-45.5%, -45.5%) scale(1.1)';
  });
  
  comparisonContainer.addEventListener('mousedown', function(e) {
    if (!isDragging) {
      isDragging = true;
      updateSliderPosition(e.clientX);
      document.body.style.cursor = 'ew-resize';
      sliderHandle.querySelector('.slider-circle').style.transform = 'translate(-45.5%, -45.5%) scale(1.1)';
    }
  });
  
  document.addEventListener('mousemove', function(e) {
    if (isDragging) {
      requestAnimationFrame(() => {
        updateSliderPosition(e.clientX);
      });
    }
  });
  
  document.addEventListener('mouseup', function() {
    if (isDragging) {
      isDragging = false;
      document.body.style.cursor = 'default';
      sliderHandle.querySelector('.slider-circle').style.transform = 'translate(-50%, -50%) scale(1)';
      beforeImage.style.filter = 'none';
    }
  });
  
  // Touch events for mobile
  sliderHandle.addEventListener('touchstart', function(e) {
    e.preventDefault();
    isDragging = true;
    sliderHandle.querySelector('.slider-circle').style.transform = 'translate(-45.5%, -45.5%) scale(1.1)';
  });
  
  comparisonContainer.addEventListener('touchstart', function(e) {
    if (!isDragging) {
      isDragging = true;
      const touch = e.touches[0];
      updateSliderPosition(touch.clientX);
      sliderHandle.querySelector('.slider-circle').style.transform = 'translate(-45.5%, -45.5%) scale(1.1)';
    }
  });
  
  document.addEventListener('touchmove', function(e) {
    if (isDragging) {
      const touch = e.touches[0];
      requestAnimationFrame(() => {
        updateSliderPosition(touch.clientX);
      });
      e.preventDefault();
    }
  }, { passive: false });
  
  document.addEventListener('touchend', function() {
    if (isDragging) {
      isDragging = false;
      sliderHandle.querySelector('.slider-circle').style.transform = 'translate(-50%, -50%) scale(1)';
      beforeImage.style.filter = 'none';
    }
  });
  
  // Keyboard controls
  document.addEventListener('keydown', function(e) {
    const containerRect = comparisonContainer.getBoundingClientRect();
    
    if (e.key === 'ArrowLeft') {
      currentPosition = Math.max(0, currentPosition - 5);
      updateSliderPosition(containerRect.left + (containerRect.width * currentPosition / 100));
    } else if (e.key === 'ArrowRight') {
      currentPosition = Math.min(100, currentPosition + 5);
      updateSliderPosition(containerRect.left + (containerRect.width * currentPosition / 100));
    }
  });
  
  // Arrow click events
  arrowLeft.addEventListener('click', function(e) {
    e.stopPropagation();
    const containerRect = comparisonContainer.getBoundingClientRect();
    currentPosition = Math.max(0, currentPosition - 25);
    updateSliderPosition(containerRect.left + (containerRect.width * currentPosition / 100));
  });
  
  arrowRight.addEventListener('click', function(e) {
    e.stopPropagation();
    const containerRect = comparisonContainer.getBoundingClientRect();
    currentPosition = Math.min(100, currentPosition + 25);
    updateSliderPosition(containerRect.left + (containerRect.width * currentPosition / 100));
  });
  
  // Initialize slider at 50%
  updateSliderPosition(window.innerWidth / 2);
  
  // Add hover effect
  comparisonContainer.addEventListener('mouseenter', function() {
    arrowLeft.style.opacity = '1';
    arrowRight.style.opacity = '1';
    afterImage.style.filter = 'brightness(1.05) saturate(1.08) contrast(1.02)';
  });
  
  comparisonContainer.addEventListener('mouseleave', function() {
    if (!isDragging) {
      arrowLeft.style.opacity = '0';
      arrowRight.style.opacity = '0';
      afterImage.style.filter = 'brightness(1.03) saturate(1.05)';
    }
  });
  
  // Add parallax effect on mouse move
  comparisonContainer.addEventListener('mousemove', function(e) {
    if (!isDragging) {
      const rect = this.getBoundingClientRect();
      const x = ((e.clientX - rect.left) / rect.width) * 100;
      const y = ((e.clientY - rect.top) / rect.height) * 100;
      
      beforeImage.style.transform = `translate(${(x - 50) * 0.01}px, ${(y - 50) * 0.01}px)`;
      afterImage.style.transform = `translate(${(50 - x) * 0.005}px, ${(50 - y) * 0.005}px)`;
    }
  });
  
  comparisonContainer.addEventListener('mouseleave', function() {
    beforeImage.style.transform = 'translate(0, 0)';
    afterImage.style.transform = 'translate(0, 0)';
  });
});
