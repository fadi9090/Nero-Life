<div class="w-full max-w-7xl mx-auto space-y-8">

    <!-- First Card - Hero Section -->
    <div class="rounded-3xl shadow-2xl overflow-hidden">
        <div class="relative w-full min-h-[280px] sm:min-h-[300px] lg:min-h-auto bg-cover bg-center flex items-center justify-center lg:justify-start p-4 sm:p-6 lg:p-12"
            style="background-image: linear-gradient(to bottom, rgba(120, 0, 45, 0.5), rgba(120, 0, 45, 0.8)), 
                            {% if product.featured_image != blank %}
                                url('{{ product.featured_image | img_url: '1200x800' }}')
                            {% else %}
                                url('{{ 'Marina-sexy-woman.jpg' | asset_url }}')
                            {% endif %};">
                
            <!-- Enhanced overlay for better text readability -->
            <div class="absolute inset-0 bg-gradient-to-r from-black/30 to-black/20 pointer-events-none z-5"></div>
            <div class="absolute inset-0 shadow-[inset_0_0_80px_20px_rgba(220,38,38,0.3)] pointer-events-none mix-blend-overlay z-6"></div>
                
            <div class="relative z-10 text-white text-center lg:text-left max-w-xl lg:pl-10 w-full">
                <!-- Badge -->
                <div class="inline-block bg-gradient-to-r from-rose-600 to-pink-500 text-white text-xs font-bold px-4 py-2 rounded-full mb-3 sm:mb-4 uppercase tracking-wider shadow-lg border border-rose-400/30">
                    Limited Time Launch Offer
                </div>
                        
                <!-- Title -->
                <h1 class="text-2xl sm:text-3xl lg:text-6xl font-black uppercase mb-3 sm:mb-4 leading-snug sm:leading-tight tracking-tight drop-shadow-2xl">
                    {% if product.title != blank %}
                        {{ product.title | default: "PROFESSIONAL LED THERAPY FOR FACE & NECK" }}
                    {% else %}
                        PROFESSIONAL<br class="sm:hidden">LED THERAPY<br class="sm:hidden">FOR FACE & NECK
                    {% endif %}
                </h1>

                <!-- Description -->
                <p class="text-sm sm:text-base lg:text-lg mb-4 sm:mb-6 leading-relaxed drop-shadow-lg max-w-md mx-auto lg:mx-0 opacity-95 font-medium bg-black/20 backdrop-blur-sm rounded-lg p-3 sm:p-0 sm:bg-transparent sm:backdrop-blur-none">
                    {% if product.description != blank %}
                        {{ product.description | truncatewords: 25 }}
                    {% else %}
                        Advanced 7-wavelength LED technology for comprehensive facial and neck rejuvenation. Visible results in just 15 minutes daily.
                    {% endif %}
                </p>

                <!-- Pricing -->
                <div class="flex items-baseline justify-center lg:justify-start space-x-2 sm:space-x-3 mb-4 sm:mb-6">
                    <span class="text-2xl sm:text-3xl lg:text-6xl font-black text-rose-200 drop-shadow-md">
                        {% if product.price != blank %}
                            {{ product.price | money_without_trailing_zeros }}
                        {% else %}
                            $64.99
                        {% endif %}
                    </span>
                    <span class="text-lg sm:text-xl lg:text-4xl font-normal line-through opacity-80 text-rose-100">
                        {% if product.compare_at_price != blank %}
                            {{ product.compare_at_price | money_without_trailing_zeros }}
                        {% else %}
                            $99.99
                        {% endif %}
                    </span>
                </div>

                <!-- CTA Button with JavaScript fallback -->
                <div class="mb-4 sm:mb-6">
                    {% assign discount = product.discount_percent | default: 35 %}
                    
                    <a href="{{ product.url }}"
                        onclick="window.location.href='{{ product.url }}'; return true;"
                        class="inline-block px-6 sm:px-8 py-3 text-sm sm:text-base font-black text-white bg-gradient-to-r from-rose-600 to-pink-500 hover:from-rose-700 hover:to-pink-600 transition-all duration-300 rounded-full shadow-2xl hover:shadow-3xl uppercase tracking-wider transform hover:scale-105 active:scale-95 border border-rose-400/30">
                        GET {{ discount }}% OFF NOW
                    </a>
                </div>

                <!-- Features -->
                <div class="flex flex-col sm:flex-row justify-center lg:justify-start space-y-2 sm:space-y-0 sm:space-x-4 text-xs sm:text-sm font-semibold">
                    {% assign has_guarantee = product.has_guarantee | default: true %}
                    {% if has_guarantee %}
                        <div class="flex items-center justify-center lg:justify-start text-white opacity-95 bg-black/20 backdrop-blur-sm rounded-full px-3 py-1 sm:bg-transparent sm:backdrop-blur-none sm:px-0">
                            <svg class="w-3 h-3 sm:w-4 sm:h-4 text-rose-300 mr-1 sm:mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            <span class="text-xs sm:text-sm">60-Day Satisfaction</span>
                        </div>
                    {% endif %}

                    {% assign is_certified = product.is_certified | default: true %}
                    {% if is_certified %}
                        <div class="flex items-center justify-center lg:justify-start text-white opacity-95 bg-black/20 backdrop-blur-sm rounded-full px-3 py-1 sm:bg-transparent sm:backdrop-blur-none sm:px-0">
                            <svg class="w-3 h-3 sm:w-4 sm:h-4 text-rose-300 mr-1 sm:mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" clip-rule="evenodd"></path>
                            </svg>
                            <span class="text-xs sm:text-sm">Medical-Grade</span>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- second Card - product  -->
    <div class="max-w-7xl mx-auto flex flex-col lg:flex-row lg:justify-between lg:gap-10 mb-8">

        <div class="w-full lg:w-1/2 mb-6 lg:mb-0">
            <div class="bg-white rounded-xl shadow-lg p-4 flex flex-col items-center">
                <div class="w-full h-80 sm:h-96 flex items-center justify-center mb-4">
                    <img id="media-display"
                        src="{{ product.featured_media | img_url: '1024x1024' }}"
                        alt="{{ product.featured_media.alt | escape }}"
                        class="max-h-full max-w-full object-contain rounded-lg transition-opacity duration-300"
                        onerror="this.onerror=null; this.src='https://placehold.co/600x600/f0f0f0/000000?text=Image+Load+Error';"
                    />
                </div>

                <div id="thumbnails-container"
                    class="w-full flex space-x-3 overflow-x-auto no-scrollbar pb-1 justify-start sm:justify-center"
                >
                    {% for media in product.media %}
                        {% assign is_active = false %}
                        {% if product.featured_media.id == media.id %}
                            {% assign is_active = true %}
                        {% endif %}
                        <img src="{{ media.preview_image | img_url: 'medium' }}"
                            alt="{{ media.alt | escape }}"
                            data-full-url="{{ media | img_url: '1024x1024' }}"
                            data-media-id="{{ media.id }}"
                            class="media-thumbnail w-16 h-16 flex-shrink-0 object-cover rounded-lg cursor-pointer transition-all duration-200 hover:scale-105 hover:opacity-100
                                            {% if is_active %}
                                                border-blue-600 border-2 ring-2 ring-blue-600/50 shadow-md
                                            {% else %}
                                                border-gray-300 border opacity-75
                                            {% endif %}"
                            onclick="swapMedia(this, '{{ media | img_url: '1024x1024' }}')"
                        />
                    {% endfor %}
                </div>
            </div>
        </div>

        <div class="w-full lg:w-1/2 p-6 border rounded-xl shadow-sm bg-white">

            <h1 class="text-3xl font-extrabold mb-4 text-gray-900">
                {{ product.title }}
            </h1>

            <!-- Price Display - 30% DISCOUNT -->
            <div class="mt-2 mb-6">
                {% comment %} Calculate 30% OFF price (70% of original) {% endcomment %}
                {% assign discounted_price = product.price | times: 0.7 %}
                
                <span class="text-xl font-bold text-gray-900">
                    {{ discounted_price | money }}
                </span>
                <span class="text-base line-through text-gray-500 ml-2">
                    {{ product.price | money }}
                </span>
                <div class="text-sm text-green-600 font-medium mt-1">
                    Save 30%
                </div>
            </div>

            <!-- Smaller Mask Options Section -->
            <div class="mb-6">
                <h3 class="text-base font-semibold text-gray-800 mb-3">Choose Your Package:</h3>
                
                <div class="grid grid-cols-2 gap-3">
                    <!-- Single Mask Option -->
                    <div id="singleMaskOption" class="mask-option relative border-2 border-[#FA8072] rounded-lg p-3 cursor-pointer transition-all duration-200 hover:shadow-md bg-rose-50"
                        data-quantity="1"
                        data-original-price="{{ product.price | money }}"
                        data-discounted-price="{{ discounted_price | money }}"
                        onclick="selectMaskOption(this, 1)">
                        
                        <!-- Selected Indicator -->
                        <div class="absolute -top-2 -right-2 w-5 h-5 bg-[#FA8072] rounded-full flex items-center justify-center">
                            <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                        </div>

                        <div class="flex flex-col items-center text-center">
                            <!-- Smaller Mask Image -->
                            <div class="package-image w-12 h-12 mb-2 bg-gray-100 rounded-lg flex items-center justify-center">
                                <img src="{{ 'single.jpg' | asset_url }}" 
                                    alt="Single Face & Neck Mask" 
                                    class="w-10 h-10 object-contain"
                                    onerror="this.style.display='none'">
                                <div class="text-lg font-bold text-gray-700">1x</div>
                            </div>
                            
                            <!-- Option Details -->
                            <h4 class="text-sm font-medium text-gray-900 mb-1">Single Mask</h4>
                            <div class="text-base font-bold text-[#FA8072]">
                                {{ discounted_price | money }}
                            </div>
                            <div class="text-xs line-through text-gray-500">
                                {{ product.price | money }}
                            </div>
                        </div>
                    </div>

                    <!-- Double Mask Option -->
                    <div id="doubleMaskOption" class="mask-option relative border-2 border-gray-200 rounded-lg p-3 cursor-pointer transition-all duration-200 hover:border-[#FA8072] hover:shadow-md"
                        data-quantity="2"
                        data-original-price="{{ product.price | times: 2 | money }}"
                        data-discounted-price="{{ discounted_price | times: 2 | money }}"
                        onclick="selectMaskOption(this, 2)">
                        
                        <!-- Selected Indicator -->
                        <div class="absolute -top-2 -right-2 w-5 h-5 bg-[#FA8072] rounded-full flex items-center justify-center hidden">
                            <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                        </div>

                        <div class="flex flex-col items-center text-center">
                            <!-- Smaller Mask Image -->
                            <div class="package-image w-12 h-12 mb-2 bg-gray-100 rounded-lg flex items-center justify-center">
                                <img src="{{ 'double.png' | asset_url }}" 
                                    alt="Two Face & Neck Masks" 
                                    class="w-10 h-10 object-contain"
                                    onerror="this.style.display='none'">
                                    <div class="text-lg font-bold text-gray-700">2x</div>
                            </div>
                            
                            <!-- Option Details -->
                            <h4 class="text-sm font-medium text-gray-900 mb-1">Double Pack</h4>
                            <div class="text-base font-bold text-[#FA8072]">
                                {{ discounted_price | times: 2 | money }}
                            </div>
                            <div class="text-xs line-through text-gray-500">
                                {{ product.price | times: 2 | money }}
                            </div>
                            {% assign save_amount = product.price | times: 2 | minus: discounted_price | times: 2 %}
                            <div class="text-xs text-green-600 font-medium mt-1" data-save-amount="Save {{ save_amount | money }}">
                                Save {{ save_amount | money }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Add to Cart Button -->
            <div class="mt-6">
                <button id="addToCartButton" 
                        class="bg-[#FA8072] text-white p-3 rounded-xl w-full text-base font-semibold shadow-md hover:bg-[#E57365] transition duration-200"
                        data-variant-id="{{ product.selected_or_first_available_variant.id }}">
                    Add to Cart - <span class="quantity-text">1 Mask</span>
                </button>
            </div>

        </div>

    </div>

    <!-- Third Card - Benefits Section -->
    <div class="w-full p-6 sm:p-8 md:p-12 bg-gradient-to-br from-white to-gray-50 rounded-3xl shadow-2xl">
        <h2 class="text-2xl sm:text-3xl lg:text-4xl font-black text-gray-900 mb-6 sm:mb-8 border-b-2 border-rose-100 pb-3 sm:pb-4">Why Our LED Mask Stands Out</h2>
        
        <!-- Desktop Layout: Benefits and Stats Side by Side -->
        <div class="lg:flex lg:space-x-8">
            <!-- Benefits List -->
            <div class="lg:w-1/2">
                <ul class="space-y-4 sm:space-y-5 mb-8 sm:mb-0">
                    <li class="flex items-start group">
                        <div class="flex-shrink-0 w-8 h-8 sm:w-10 sm:h-10 bg-gradient-to-r from-rose-500 to-pink-500 rounded-full flex items-center justify-center mr-3 sm:mr-4 group-hover:scale-110 transition-transform duration-300">
                            <svg class="w-4 h-4 sm:w-5 sm:h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                            </svg>
                        </div>
                        <span class="text-gray-800 text-base sm:text-lg font-medium pt-1 sm:pt-2">Dual-area treatment for face and neck simultaneously</span>
                    </li>
                    <li class="flex items-start group">
                        <div class="flex-shrink-0 w-8 h-8 sm:w-10 sm:h-10 bg-gradient-to-r from-rose-500 to-pink-500 rounded-full flex items-center justify-center mr-3 sm:mr-4 group-hover:scale-110 transition-transform duration-300">
                            <svg class="w-4 h-4 sm:w-5 sm:h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd"></path>
                            </svg>
                        </div>
                        <span class="text-gray-800 text-base sm:text-lg font-medium pt-1 sm:pt-2">7 specialized light wavelengths for different skin concerns</span>
                    </li>
                    <li class="flex items-start group">
                        <div class="flex-shrink-0 w-8 h-8 sm:w-10 sm:h-10 bg-gradient-to-r from-rose-500 to-pink-500 rounded-full flex items-center justify-center mr-3 sm:mr-4 group-hover:scale-110 transition-transform duration-300">
                            <svg class="w-4 h-4 sm:w-5 sm:h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                            </svg>
                        </div>
                        <span class="text-gray-800 text-base sm:text-lg font-medium pt-1 sm:pt-2">Clinically tested technology with proven safety standards</span>
                    </li>
                    <li class="flex items-start group">
                        <div class="flex-shrink-0 w-8 h-8 sm:w-10 sm:h-10 bg-gradient-to-r from-rose-500 to-pink-500 rounded-full flex items-center justify-center mr-3 sm:mr-4 group-hover:scale-110 transition-transform duration-300">
                            <svg class="w-4 h-4 sm:w-5 sm:h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                            </svg>
                        </div>
                        <span class="text-gray-800 text-base sm:text-lg font-medium pt-1 sm:pt-2">Ergonomic design fits all face shapes and neck contours</span>
                    </li>
                </ul>
            </div>
            
            <!-- Stats Grid -->
            <div class="lg:w-1/2">
                <div class="grid grid-cols-2 gap-4 sm:gap-5">
                    <div class="bg-white rounded-xl sm:rounded-2xl p-4 sm:p-5 text-center border border-rose-100 shadow-lg">
                        <div class="text-2xl sm:text-3xl font-black text-rose-600">94%</div>
                        <div class="text-sm text-gray-600 mt-2 font-medium">Users See Results</div>
                    </div>
                    <div class="bg-white rounded-xl sm:rounded-2xl p-4 sm:p-5 text-center border border-rose-100 shadow-lg">
                        <div class="text-2xl sm:text-3xl font-black text-rose-600">12min</div>
                        <div class="text-sm text-gray-600 mt-2 font-medium">Daily Treatment</div>
                    </div>
                    <div class="bg-white rounded-xl sm:rounded-2xl p-4 sm:p-5 text-center border border-rose-100 shadow-lg">
                        <div class="text-2xl sm:text-3xl font-black text-rose-600">7-in-1</div>
                        <div class="text-sm text-gray-600 mt-2 font-medium">Light Therapy</div>
                    </div>
                    <div class="bg-white rounded-xl sm:rounded-2xl p-4 sm:p-5 text-center border border-rose-100 shadow-lg">
                        <div class="text-2xl sm:text-3xl font-black text-rose-600">3Y</div>
                        <div class="text-sm text-gray-600 mt-2 font-medium">Device Warranty</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Forth card - Professional Before & After Results Gallery -->
    <div class="w-full max-w-7xl mx-auto">
        <div class="bg-white rounded-3xl shadow-xl p-6 sm:p-8 lg:p-12 border border-gray-100">
            <!-- Section Header -->
            <div class="text-center mb-8 sm:mb-12">
                <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900 mb-3">Visible Results Timeline</h2>
                <p class="text-gray-600 text-sm sm:text-base max-w-2xl mx-auto">Track your skin transformation journey week by week with our LED therapy treatment</p>
            </div>
            
            <!-- Results Grid -->
            <div class="grid grid-cols-2 gap-6 sm:gap-8 lg:gap-10">
                <!-- Week 1 -->
                <div class="group flex flex-col items-center text-center">
                    <div class="relative mb-4 sm:mb-5">
                        <div class="absolute -inset-2 bg-gradient-to-r from-blue-50 to-purple-50 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                        <img
                            src="{{ '1.jpg' | asset_url }}"
                            alt="Skin improvement after 1 week of LED therapy"
                            width="400"
                            height="300"
                            loading="lazy"
                            class="relative w-full max-w-[160px] sm:max-w-[200px] lg:max-w-[240px] h-auto rounded-xl shadow-md group-hover:shadow-lg transition-all duration-300 transform group-hover:scale-105"
                        >
                    </div>
                    <div class="space-y-1">
                        <div class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-blue-100 text-blue-600 text-xs font-semibold mb-1">
                            1
                        </div>
                        <h3 class="text-base sm:text-lg font-semibold text-gray-900">After 1 Week</h3>
                        <p class="text-gray-500 text-xs sm:text-sm">Initial hydration boost</p>
                    </div>
                </div>
                
                <!-- Week 2 -->
                <div class="group flex flex-col items-center text-center">
                    <div class="relative mb-4 sm:mb-5">
                        <div class="absolute -inset-2 bg-gradient-to-r from-green-50 to-emerald-50 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                        <img
                            src="{{ '2.jpg' | asset_url }}"
                            alt="Skin improvement after 2 weeks of LED therapy"
                            width="400"
                            height="300"
                            loading="lazy"
                            class="relative w-full max-w-[160px] sm:max-w-[200px] lg:max-w-[240px] h-auto rounded-xl shadow-md group-hover:shadow-lg transition-all duration-300 transform group-hover:scale-105"
                        >
                    </div>
                    <div class="space-y-1">
                        <div class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-green-100 text-green-600 text-xs font-semibold mb-1">
                            2
                        </div>
                        <h3 class="text-base sm:text-lg font-semibold text-gray-900">After 2 Weeks</h3>
                        <p class="text-gray-500 text-xs sm:text-sm">Enhanced radiance</p>
                    </div>
                </div>
                
                <!-- Week 3 -->
                <div class="group flex flex-col items-center text-center">
                    <div class="relative mb-4 sm:mb-5">
                        <div class="absolute -inset-2 bg-gradient-to-r from-purple-50 to-pink-50 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                        <img
                            src="{{ '3.jpg' | asset_url }}"
                            alt="Skin improvement after 3 weeks of LED therapy"
                            width="400"
                            height="300"
                            loading="lazy"
                            class="relative w-full max-w-[160px] sm:max-w-[200px] lg:max-w-[240px] h-auto rounded-xl shadow-md group-hover:shadow-lg transition-all duration-300 transform group-hover:scale-105"
                        >
                    </div>
                    <div class="space-y-1">
                        <div class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-purple-100 text-purple-600 text-xs font-semibold mb-1">
                            3
                        </div>
                        <h3 class="text-base sm:text-lg font-semibold text-gray-900">After 3 Weeks</h3>
                        <p class="text-gray-500 text-xs sm:text-sm">Texture refinement</p>
                    </div>
                </div>
                
                <!-- Week 4 -->
                <div class="group flex flex-col items-center text-center">
                    <div class="relative mb-4 sm:mb-5">
                        <div class="absolute -inset-2 bg-gradient-to-r from-orange-50 to-rose-50 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                        <img
                            src="{{ '4.jpg' | asset_url }}"
                            alt="Skin improvement after 4 weeks of LED therapy"
                            width="400"
                            height="300"
                            loading="lazy"
                            class="relative w-full max-w-[160px] sm:max-w-[200px] lg:max-w-[240px] h-auto rounded-xl shadow-md group-hover:shadow-lg transition-all duration-300 transform group-hover:scale-105"
                        >
                    </div>
                    <div class="space-y-1">
                        <div class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-orange-100 text-orange-600 text-xs font-semibold mb-1">
