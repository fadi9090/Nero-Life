<div class="w-full max-w-7xl rounded-2xl shadow-2xl overflow-hidden bg-white mx-auto">
    <div class="flex flex-col lg:flex-row min-h-[400px] lg:min-h-[500px]">
        <!-- Image Section with Text Overlay -->
        <div class="relative lg:w-3/5 min-h-[350px] lg:min-h-auto bg-cover bg-center flex items-center justify-center lg:justify-start p-6 lg:p-8"
             style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.6)), url('https://images.unsplash.com/photo-1556228578-8c89e6adf883?ixlib=rb-4.0.3&auto=format&fit=crop&w=1169&q=80')">
            
            <!-- Glow Effect -->
            <div class="absolute inset-0 shadow-[inset_0_0_80px_20px_rgba(156,48,48,0.3)] pointer-events-none mix-blend-overlay z-5"></div>
            
            <!-- Text Content Overlay -->
            <div class="relative z-10 text-white text-center lg:text-left max-w-2xl lg:pl-10">
                <!-- Product Title -->
                <h1 class="title-text text-2xl sm:text-3xl lg:text-5xl font-black uppercase mb-4 lg:mb-6 leading-tight drop-shadow-lg">
                    {% if product.title != blank %}
                        {{ product.title | default: "THE CLINIC FACIAL, NOW AT HOME" }}
                    {% else %}
                        THE CLINIC FACIAL, NOW AT HOME
                    {% endif %}
                </h1>

                <!-- Product Description -->
                <p class="text-sm sm:text-base lg:text-lg mb-6 lg:mb-8 leading-relaxed drop-shadow-md max-w-xl">
                    {% if product.description != blank %}
                        {{ product.description | truncatewords: 20 }}
                    {% else %}
                        Unlock 7-1 LED Therapy Mask. Save thousands on treatments. Guaranteed results in 15 minutes a day.
                    {% endif %}
                </p>

                <!-- Price Comparison -->
                <div class="flex items-baseline justify-center lg:justify-start space-x-3 mb-6 lg:mb-8">
                    <span class="text-2xl sm:text-3xl lg:text-4xl font-black text-red-400 drop-shadow-md">
                        {% if product.price != blank %}
                            {{ product.price | money_without_trailing_zeros }}
                        {% else %}
                            $69.99
                        {% endif %}
                    </span>
                    <span class="text-xl sm:text-2xl lg:text-3xl font-medium line-through opacity-80">
                        {% if product.compare_at_price != blank %}
                            {{ product.compare_at_price | money_without_trailing_zeros }}
                        {% else %}
                            $99.99
                        {% endif %}
                    </span>
                </div>

                <!-- CTA Button -->
                <div class="mb-6 lg:mb-8">
                    {% assign discount = product.discount_percent | default: 30 %}
                    <a href="{% if product.url != blank %}{{ product.url }}{% else %}#{% endif %}"
                       class="inline-block px-6 py-3 lg:px-8 lg:py-3 text-sm lg:text-base font-bold text-white bg-red-500 hover:bg-red-600 transition-all duration-300 rounded-lg lg:rounded-xl shadow-lg hover:shadow-xl uppercase tracking-wider transform hover:-translate-y-0.5">
                        SHOP {{ discount }}% OFF NOW
                    </a>
                </div>

                <!-- Feature Badges -->
                <div class="flex flex-col sm:flex-row justify-center lg:justify-start space-y-2 sm:space-y-0 sm:space-x-6 text-xs sm:text-sm font-semibold">
                    {% assign has_guarantee = product.has_guarantee | default: true %}
                    {% if has_guarantee %}
                        <div class="flex items-center text-white drop-shadow-sm">
                            <svg class="w-4 h-4 sm:w-5 sm:h-5 text-green-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            30-Day Guarantee
                        </div>
                    {% endif %}

                    {% assign is_certified = product.is_certified | default: true %}
                    {% if is_certified %}
                        <div class="flex items-center text-white drop-shadow-sm">
                            <svg class="w-4 h-4 sm:w-5 sm:h-5 text-blue-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            FCC & CE Certified
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Product Details Section -->
        <div class="lg:w-2/5 p-6 lg:p-10 bg-white flex flex-col justify-center">
            <h2 class="text-xl lg:text-2xl font-bold text-gray-800 mb-4 lg:mb-6">Why Choose Our LED Therapy Mask?</h2>
            
            <!-- Benefits List -->
            <ul class="space-y-3 lg:space-y-4 mb-6 lg:mb-8">
                <li class="flex items-start">
                    <svg class="w-4 h-4 lg:w-5 lg:h-5 text-green-500 mt-0.5 lg:mt-1 mr-2 lg:mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="text-gray-700 text-sm lg:text-base">Professional-grade results at home</span>
                </li>
                <li class="flex items-start">
                    <svg class="w-4 h-4 lg:w-5 lg:h-5 text-green-500 mt-0.5 lg:mt-1 mr-2 lg:mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="text-gray-700 text-sm lg:text-base">7 different light therapy modes</span>
                </li>
                <li class="flex items-start">
                    <svg class="w-4 h-4 lg:w-5 lg:h-5 text-green-500 mt-0.5 lg:mt-1 mr-2 lg:mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="text-gray-700 text-sm lg:text-base">FDA-cleared technology</span>
                </li>
                <li class="flex items-start">
                    <svg class="w-4 h-4 lg:w-5 lg:h-5 text-green-500 mt-0.5 lg:mt-1 mr-2 lg:mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="text-gray-700 text-sm lg:text-base">Fits all face shapes comfortably</span>
                </li>
            </ul>

            <!-- Stats Grid -->
            <div class="grid grid-cols-2 gap-3 lg:gap-4 mt-3 lg:mt-4">
                <div class="bg-gray-50 rounded-lg p-3 lg:p-4 text-center">
                    <div class="text-lg lg:text-xl font-bold text-blue-600">97%</div>
                    <div class="text-xs lg:text-sm text-gray-600 mt-1">Satisfaction</div>
                </div>
                <div class="bg-gray-50 rounded-lg p-3 lg:p-4 text-center">
                    <div class="text-lg lg:text-xl font-bold text-blue-600">15min</div>
                    <div class="text-xs lg:text-sm text-gray-600 mt-1">Daily Use</div>
                </div>
                <div class="bg-gray-50 rounded-lg p-3 lg:p-4 text-center">
                    <div class="text-lg lg:text-xl font-bold text-blue-600">7-in-1</div>
                    <div class="text-xs lg:text-sm text-gray-600 mt-1">Light Modes</div>
                </div>
                <div class="bg-gray-50 rounded-lg p-3 lg:p-4 text-center">
                    <div class="text-lg lg:text-xl font-bold text-blue-600">2Y</div>
                    <div class="text-xs lg:text-sm text-gray-600 mt-1">Warranty</div>
                </div>
            </div>

            <!-- Mobile Notice -->
            <div class="mt-4 p-3 bg-orange-50 rounded-lg text-center lg:hidden">
                <div class="text-orange-700 font-medium text-xs">
                    <svg class="w-3 h-3 inline mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                    </svg>
                    Text displayed over image with proper z-index
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .title-text {
        line-height: 1.1;
        font-weight: 800;
    }
</style>