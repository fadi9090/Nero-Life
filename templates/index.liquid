<style>
    .title-text {
        line-height: 1.1;
        font-weight: 800;
    }

    .mask-placeholder {
        background-color: #333; 
        background-size: cover;
        background-position: center;
        position: relative;
        min-height: 400px; 
        overflow: hidden;
    }

    .mask-placeholder::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        box-shadow: inset 0 0 100px 30px rgba(156, 48, 48, 0.7); 
        pointer-events: none;
        mix-blend-mode: soft-light;
    }
</style>

<div class="w-full max-w-7xl rounded-xl shadow-2xl overflow-hidden bg-white mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-2">

        <!-- 1. Content Area (Left) -->
        <div class="p-8 sm:p-12 lg:p-16 flex flex-col justify-center text-black">
            
            <!-- Liquid: Title -->
            <h1 class="title-text text-3xl sm:text-5xl lg:text-6xl uppercase mb-6 max-w-lg">
                {% if product.title != blank %}
                    {{ product.title | default: "THE CLINIC FACIAL, NOW AT HOME" }}
                {% else %}
                    THE CLINIC FACIAL, NOW AT HOME
                {% endif %}
            </h1>

            <!-- Liquid: Description -->
            <p class="text-base sm:text-lg mb-8 max-w-md font-medium">
                {% if product.description != blank %}
                    {{ product.description | truncatewords: 30 }}
                {% else %}
                    Unlock 7-1 LED Therapy Mask. Save thousands on treatments. Guaranteed results in 15 minutes a day.
                {% endif %}
            </p>

            <!-- Liquid: Price Comparison -->
            <div class="flex items-baseline space-x-3 mb-8">
                <span class="text-3xl sm:text-4xl font-bold text-accent-red">
                    {% comment %} Use money_without_currency filter and prepend $ for a clean look {% endcomment %}
                    {% if product.price != blank %}
                        {{ product.price | money_without_currency | prepend: '$' }}
                    {% else %}
                        $69.99
                    {% endif %}
                </span>
                <span class="text-xl sm:text-2xl font-normal line-through opacity-70">
                    {% if product.compare_at_price != blank %}
                        {{ product.compare_at_price | money_without_currency | prepend: '$' }}
                    {% else %}
                        $99.99
                    {% endif %}
                </span>
            </div>

            <!-- Liquid: Call to Action Button -->
            <div class="mb-8">
                {% assign discount = product.discount_percent | default: 10 %}
                <a href="{% if product.url != blank %}{{ product.url }}{% else %}#{% endif %}"
                   class="inline-block px-8 py-3 text-lg font-bold text-[#F5F5DC] bg-black hover:bg-red-800 transition duration-300 rounded-lg shadow-lg uppercase tracking-wider">
                    SHOP {{ discount }}% OFF NOW
                </a>
            </div>

            <!-- Liquid: Feature Badges -->
            <div class="flex flex-col sm:flex-row sm:space-x-6 space-y-2 sm:space-y-0 text-sm font-semibold mt-4">
                
                <!-- 30-Day Guarantee Badge -->
                {% assign has_guarantee = product.has_guarantee | default: true %}
                {% if has_guarantee %}
                    <div class="flex items-center text-primary-text/90">
                        <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        30-Day Guarantee
                    </div>
                {% endif %}

                <!-- Certification Badge -->
                {% assign is_certified = product.is_certified | default: true %}
                {% if is_certified %}
                    <div class="flex items-center text-primary-text/90">
                        <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        FCC & CE Certified
                    </div>
                {% endif %}

            </div>
        </div>

        <!-- 2. Image Area (Right) -->
        <div class="mask-placeholder w-full min-h-[300px] lg:min-h-full">
            <!-- 
            PLACEHOLDER FOR PRODUCT IMAGE
            This area is styled with the dramatic dark background and red glow effect via CSS.
            Insert your Liquid image tag here, e.g.:
            <img src="{{ product.featured_image | img_url: '1000x' }}" alt="{{ product.title }}" class="w-full h-full object-cover"> 
            -->
        </div>
        
    </div>
</div>