    <script>
        // Thumbnail click functionality
        document.querySelectorAll('.thumbnail').forEach(thumb => {
            thumb.addEventListener('click', function() {
                // Remove active class from all thumbnails
                document.querySelectorAll('.thumbnail').forEach(t => {
                    t.classList.remove('active');
                    t.classList.add('border-gray-300');
                });
                
                // Add active class to clicked thumbnail
                this.classList.add('active');
                this.classList.remove('border-gray-300');
                
                // Get the image source from the thumbnail
                const imgSrc = this.querySelector('img').src;
                
                // Update the main image
                document.getElementById('main-image').src = imgSrc.replace('200', '800');
            });
        });
        
        // Size selection functionality
        document.querySelectorAll('.size-option').forEach(size => {
            size.addEventListener('click', function() {
                // Remove selected class from all sizes
                document.querySelectorAll('.size-option').forEach(s => {
                    s.classList.remove('selected');
                    s.classList.add('border-gray-300');
                });
                
                // Add selected class to clicked size
                this.classList.add('selected');
                this.classList.remove('border-gray-300');
            });
        });
        
        // Accordion functionality
        document.querySelectorAll('.accordion-header').forEach(header => {
            header.addEventListener('click', function() {
                const accordion = this.parentElement;
                accordion.classList.toggle('active');
            });
        });
        
        // Quantity buttons functionality
        const quantityDisplay = document.querySelector('.flex.border button + div');
        const minusBtn = document.querySelector('.flex.border button:first-child');
        const plusBtn = document.querySelector('.flex.border button:last-child');
        
        let quantity = 1;
        
        minusBtn.addEventListener('click', function() {
            if (quantity > 1) {
                quantity--;
                quantityDisplay.textContent = quantity;
            }
        });
        
        plusBtn.addEventListener('click', function() {
            quantity++;
            quantityDisplay.textContent = quantity;
        });
    </script>
