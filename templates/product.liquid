{% comment %} 
  SECTION: PRODUCT PAGE - STANDARD LAYOUT
  Adapted Colors: #F5F5DC (Light BG), black (Text/Button BG), #FA8072 (Accent), #0077B6 (Link/Hover)
{% endcomment %}

{% assign current_variant = product.selected_or_first_available_variant %}

<div class="bg-[#F5F5DC] pt-6">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

    <nav aria-label="Breadcrumb" class="pb-6">
      <ol role="list" class="flex items-center space-x-2">
        <li>
          <div class="flex items-center">
            <a href="/" class="mr-2 text-sm font-medium text-black hover:text-[#0077B6]">Home</a>
            <svg viewBox="0 0 16 20" width="16" height="20" fill="currentColor" aria-hidden="true" class="h-5 w-4 text-gray-400">
              <path d="M5.697 4.34L8.98 16.532h1.327L7.025 4.341H5.697z" />
            </svg>
          </div>
        </li>
        {% if collection %}
          <li>
            <div class="flex items-center">
              <a href="{{ collection.url }}" class="mr-2 text-sm font-medium text-black hover:text-[#0077B6]">{{ collection.title }}</a>
              <svg viewBox="0 0 16 20" width="16" height="20" fill="currentColor" aria-hidden="true" class="h-5 w-4 text-gray-400">
                <path d="M5.697 4.34L8.98 16.532h1.327L7.025 4.341H5.697z" />
              </svg>
            </div>
          </li>
        {% endif %}
        <li class="text-sm">
          <span aria-current="page" class="font-medium text-gray-700">{{ product.title }}</span>
        </li>
      </ol>
    </nav>

    <div class="mx-auto mt-6 max-w-2xl sm:px-6 lg:grid lg:max-w-7xl lg:grid-cols-3 lg:gap-8 lg:px-8">
      
      {% for media in product.media limit: 4 %}
        {% assign image_url = media | img_url: 'master' %}
        {% assign alt_text = media.alt | escape %}
        
        {% if forloop.first %}
          <img src="{{ image_url }}" alt="{{ alt_text }}" 
               class="row-span-2 aspect-4/5 size-full object-cover sm:rounded-lg lg:aspect-3/4">
        {% elsif forloop.index == 2 %}
          <img src="{{ image_url }}" alt="{{ alt_text }}" 
               class="row-span-2 aspect-3/4 size-full rounded-lg object-cover max-lg:hidden">
        {% elsif forloop.index == 3 %}
          <img src="{{ image_url }}" alt="{{ alt_text }}" 
               class="col-start-2 aspect-3/2 size-full rounded-lg object-cover max-lg:hidden">
        {% elsif forloop.index == 4 %}
          <img src="{{ image_url }}" alt="{{ alt_text }}" 
               class="col-start-2 row-start-2 aspect-3/2 size-full rounded-lg object-cover max-lg:hidden">
        {% endif %}
      {% endfor %}

      {% if product.media.size < 4 %}
        {% for i in (product.media.size..3) %}
          {% capture image_class %}
            {% if i == 1 %}row-span-2 aspect-3/4 size-full rounded-lg object-cover max-lg:hidden{% endif %}
            {% if i == 2 %}col-start-2 aspect-3/2 size-full rounded-lg object-cover max-lg:hidden{% endif %}
            {% if i == 3 %}col-start-2 row-start-2 aspect-3/2 size-full rounded-lg object-cover max-lg:hidden{% endif %}
          {% endcapture %}
          <div class="{{ image_class }} flex items-center justify-center bg-gray-200">
            <span class="text-gray-500">Image {{ i | plus: 1 }} Placeholder</span>
          </div>
        {% endfor %}
      {% endif %}

    </div>

    <div class="mx-auto max-w-2xl px-4 pt-10 pb-16 sm:px-6 lg:grid lg:max-w-7xl lg:grid-cols-3 lg:grid-rows-[auto_auto_1fr] lg:gap-x-8 lg:px-8 lg:pt-16 lg:pb-24">
      
      <div class="lg:col-span-2 lg:border-r lg:border-gray-300 lg:pr-8">
        <h1 class="text-2xl font-bold tracking-tight text-black sm:text-3xl">{{ product.title }}</h1>
      </div>

      <div class="mt-4 lg:row-span-3 lg:mt-0">
        <h2 class="sr-only">Product information</h2>
        <p class="text-3xl tracking-tight text-black">{{ current_variant.price | money }}</p>

        <div class="mt-6">
          <h3 class="sr-only">Reviews</h3>
          <div class="flex items-center">
            <div class="flex items-center">
              {% assign reviews_count = 4 %}
              {% for i in (1..5) %}
                <svg viewBox="0 0 20 20" fill="currentColor" data-slot="icon" aria-hidden="true" 
                     class="size-5 shrink-0 {% if i <= reviews_count %}text-black{% else %}text-gray-300{% endif %}">
                  <path d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401Z" clip-rule="evenodd" fill-rule="evenodd" />
                </svg>
              {% endfor %}
            </div>
            <p class="sr-only">4 out of 5 stars</p>
            <a href="#" class="ml-3 text-sm font-medium text-[#0077B6] hover:text-black">117 reviews</a>
          </div>
        </div>
        
        {% form 'product', product, id: 'product-form-main', class: 'mt-10' %}
          <input type="hidden" name="id" value="{{ current_variant.id }}">

          {% for option in product.options_with_values %}
            <div class="mt-8">
              <h3 class="text-sm font-medium text-black">{{ option.name }}</h3>

              <fieldset aria-label="Choose a {{ option.name | downcase }}" class="mt-4">
                <div class="flex items-center gap-x-3">
                  {% for value in option.values %}
                    {% assign available = true %} 
                    {% comment %} In a real theme, you'd check variant availability here using JS/Liquid logic {% endcomment %}
                    
                    <label aria-label="{{ value }}" 
                           class="group relative flex items-center justify-center rounded-md border p-3 
                           {% if option.name == 'Size' %}
                             border-gray-300 bg-white
                             has-checked:border-[#0077B6] has-checked:bg-[#0077B6] has-checked:text-[#F5F5DC]
                             has-disabled:border-gray-400 has-disabled:bg-gray-200 has-disabled:opacity-50
                           {% else %}
                             size-8 appearance-none rounded-full outline -outline-offset-1 outline-black/10 bg-white
                           {% endif %}">
                        
                      <input type="radio" 
                             name="options[{{ option.name | handleize }}]" 
                             value="{{ value | escape }}"
                             {% if current_variant.options contains value %}checked{% endif %}
                             {% unless available %}disabled{% endunless %}
                             class="absolute inset-0 appearance-none focus:outline-none disabled:cursor-not-allowed" />
                      
                      {% if option.name == 'Size' %}
                        <span class="text-sm font-medium text-black uppercase group-has-checked:text-[#F5F5DC]">{{ value }}</span>
                      {% else %}

                        <div class="size-full rounded-full" style="background-color: 
                          {% case value | downcase %}
                            {% when 'white' %} #FFFFFF
                            {% when 'black' %} #000000
                            {% when 'gray' %} #D1D5DB
                            {% else %} #FA8072 
                          {% endcase %};">
                        </div>
                      {% endif %}
                    </label>
                  {% endfor %}
                </div>
              </fieldset>
            </div>
          {% endfor %}

          <button type="submit" name="add" 
                  class="mt-10 flex w-full items-center justify-center rounded-md border border-transparent 
                         bg-black px-8 py-3 text-base font-medium text-[#F5F5DC] 
                         hover:bg-[#FA8072] hover:text-black focus:ring-2 focus:ring-[#FA8072] focus:ring-offset-2 focus:outline-none">
            Add to Bag
          </button>
        {% endform %}
      </div>

      <div class="py-10 lg:col-span-2 lg:col-start-1 lg:border-r lg:border-gray-300 lg:pt-6 lg:pr-8 lg:pb-16">

        <div>
          <h2 class="text-lg font-medium text-black">Description</h2>
          <div class="mt-4 space-y-6 text-base text-gray-700">
            {{ product.description }}
          </div>
        </div>

        <div class="mt-10">
          <h3 class="text-lg font-medium text-black">Highlights</h3>
          <div class="mt-4">
            <ul role="list" class="list-disc space-y-2 pl-4 text-sm">
              <li class="text-gray-700"><span class="text-gray-700">Hand cut and sewn locally</span></li>
              <li class="text-gray-700"><span class="text-gray-700">Dyed with our proprietary colors</span></li>
              <li class="text-gray-700"><span class="text-gray-700">Pre-washed &amp; pre-shrunk</span></li>
              <li class="text-gray-700"><span class="text-gray-700">Ultra-soft 100% cotton</span></li>
            </ul>
          </div>
        </div>

        <div class="mt-10">
          <h2 class="text-lg font-medium text-black">Details</h2>
          <div class="mt-4 space-y-6">
            <p class="text-sm text-gray-600">This item is part of our limited Winter collection. See shipping and return policy for full details.</p>
          </div>
        </div>
      </div>
      
    </div>
  </div>
</div>